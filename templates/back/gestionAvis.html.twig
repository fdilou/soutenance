{% extends 'base.html.twig' %}

{% block title %}

    {{ parent() }} GestionAvis

{% endblock %}

{% block body %}

    <table class="table table-primary table-striped">
        <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">note</th>
            <th scope="col">Commentaire</th>
            <th scope="col">valider</th>


        </tr>

        </thead>
        <tbody>

        {% for avis in avis %}
            <tr>
                <th scope="row">{{ avis.id }}</th>
                <th>{{ avis.note }}</th>
                <td>{{ avis.commentaire }}</td>
                <td><a href="{{ path('editAvis', {'id': avis.id}) }}" class="btn btn-info">Modifier</a>
                    <a href="{{ path('deleteAvis', {'id': avis.id}) }}" onclick="return confirm('Êtes-vous sûr?')" class="btn btn-danger">Supprimer</a>
                </td>

        {% endfor %}

        </tbody>
    </table>









{% endblock %}




